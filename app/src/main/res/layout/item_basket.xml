<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/article_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/maquillage" />

    <brostore.maquillage.custom.FontTextView
        android:id="@+id/article_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/article_image"
        android:text="Rouge a levres BOURJOIS Sweeta levres BOURJOIS Sweet a levres BOURJOIS Sweet "
        android:textColor="@color/white"
        app:ttfNameTextView="ElleNovaC-Bold.otf"/>

    <TextView
        android:id="@+id/article_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/article_prix_total"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/article_image"
        android:text="4,95€"
        android:textColor="@color/rose" />

    <TextView
        android:id="@+id/article_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/article_prix"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/article_prix"
        android:text="Qté : 2"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/article_prix_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/view"
        android:layout_marginTop="5dp"
        android:text="Total : 8,90€"
        android:textColor="@color/white" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/article_image"
        android:layout_marginTop="10dp"
        android:background="@color/grey_dark" />

</RelativeLayout>