<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/article_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/maquillage" />

    <brostore.maquillage.custom.FontTextView
        android:id="@+id/article_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/article_image"
        android:text="Rouge a levres BOURJOIS Sweeta levres BOURJOIS Sweet a levres BOURJOIS Sweet "
        android:textColor="@color/white"
        app:ttfNameTextView="ElleNovaC-Bold.otf"/>

    <TextView
        android:id="@+id/article_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/article_name"
        android:layout_marginTop="8dp"
        android:text="4,95€"
        android:textColor="@color/rose"
        android:textSize="18dp"/>

    <LinearLayout
        android:id="@+id/linear_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/article_total_price"
        android:layout_toRightOf="@+id/article_image"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/article_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qté : "
            android:textColor="@color/grey_bright" />

        <Spinner
            android:id="@+id/article_quantity_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/article_image"
        android:layout_marginTop="10dp"
        android:background="@color/grey_dark" />

</RelativeLayout>